<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@id/close" />
        <OnSwipe />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            motion:layout_constraintBottom_toTopOf="@+id/scrollView2"
            android:layout_marginEnd="15dp"
            motion:layout_constraintRight_toRightOf="@id/scrollView2"
            android:alpha="0" />
        <Constraint
            android:id="@+id/arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            motion:layout_constraintBottom_toTopOf="@+id/scrollView2"
            android:layout_marginEnd="15dp"
            motion:layout_constraintRight_toRightOf="@id/scrollView2"
            android:alpha="1" />
        <Constraint
            android:id="@+id/jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/layout"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            motion:layout_constraintBottom_toTopOf="@+id/scrollView2"
            android:layout_marginEnd="15dp"
            motion:layout_constraintRight_toRightOf="@id/scrollView2"
            android:alpha="1" />
        <Constraint
            android:id="@+id/arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            motion:layout_constraintBottom_toTopOf="@+id/scrollView2"
            android:layout_marginEnd="15dp"
            motion:layout_constraintRight_toRightOf="@id/scrollView2"
            android:alpha="0" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/image"
            android:layout_marginBottom="280dp"
            android:layout_width="match_parent"
            android:id="@+id/layout" />
        <Constraint
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.1" />
    </ConstraintSet>
</MotionScene>